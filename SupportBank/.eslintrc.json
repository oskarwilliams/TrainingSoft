{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi":["error", "always"],
        "indent":["error", 4],
        "linebreak-style":["windows"],
        "no-plusplus":["error", { "allowForLoopAfterthoughts": true }],
    }
}